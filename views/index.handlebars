<div class="container">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div class="panel panel-default">
                <div class="panel-body">

                    <form action="/" method="POST">
                        <div class="input-group">

                            <input type="text" id="username" class="form-control" placeholder="Enter in your username...">
                            <br><br>
                            <input type="text" id="password" class="form-control" placeholder="Enter in your password...">
                            <br><br>
                            <button class="btn btn-default" type="submit" id="logIn">Log In</button>
                            <button class="btn btn-default" type="submit" id="signUp">Sign Up</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <div class="col-md-2"></div>

    </div>
</div>

<script type="text/javascript">
    $("#logIn").on(".click", function() {

        var userInfo = {
            username: ("#username").val().trim(),
            password: ("#password").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/userData", {
            type: "POST",
            data: userInfo
        }).then(
            function() {
                console.log("user signed in");
                // Reload the page to get the updated list
                window.location.href = "/dashboard";
            }
        );

    });
</script>

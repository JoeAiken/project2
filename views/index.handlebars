<div class="container">

    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <h1 class="title">Project Title</h1>
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">

                    <form action="/" method="POST">
                        <label>Username:</label><br>
                        <input type="text" id="username" class="form-control" aria-describedby="basic-addon1">
                        <br>
                        <label>Password:</label><br>
                        <input type="text" id="password" class="form-control" aria-describedby="basic-addon1">
                        <br>
                        <button class="btn btn-default" type="submit" id="logIn">Log In</button>
                        <button class="btn btn-default" type="submit" id="signUp">Sign Up</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>


</div>

<script type="text/javascript">
    $("#logIn").on(".click", function() {

        var userInfo = {
            username: ("#username").val().trim(),
            password: ("#password").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/userData", {
            type: "POST",
            data: userInfo
        }).then(
            function() {
                console.log("user signed in");
                window.location.href = "/dashboard";
            }
        );

    });
</script>

<!-- FIRST ROW -->
<!-- ====================== -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>{{userName}}'s Trip Dashboard</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Search History</h3>
                </div>
                <div class="panel-body history">

                    {{#each searchHistory}}

                        <p><a href="/results/priorsearch/:id" data-searchid="{{this.id}}" class="searchButton">{{this.city}}, {{this.state}}</a>
                            <button data-deleteid="{{this.id}}" class="btn btn-sm deleteButton glyphicon glyphicon-trash"></button>
                        </p>


                    {{/each}}


                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">


                    <div class="col-md-4" id="left">
                        <div class="row">
                            <p class="destination">{{lastSearch.city}}, {{lastSearch.state}}
                            </p>
                        </div>
                        <div class="row">
                            <p class="image"><img src="{{lastSearch.image}}" width="200" height="200">
                            </p>
                        </div>
                    </div>


                    <div class="col-md-8" id="right">
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <p class="currentWeatherTitle">Current Weather</p>

                                    <p class="currentWeather">

                                        {{lastSearch.todayDate}}
                                        <br>
                                        <strong>High: </strong>{{lastSearch.todayHigh}} |
                                        <strong>Low: </strong>{{lastSearch.todayLow}} |
                                        <strong>Conditions: </strong>{{lastSearch.todayConds}}

                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <p class="weatherHistoryTitle">Weather History</p>
                                    <p class="weatherHistory">

                                    </p>

                                    <table class="table">
                                        <tr>
                                            <th>Year</th>
                                            <th>Month</th>
                                            <th>Day</th>
                                            <th>High Temp</th>
                                            <th>Low Temp</th>
                                            <th>Humidity</th>
                                            <th>Conditions</th>
                                        </tr>
                                        <tr>
                                            <td>2005</td>
                                            <td>{{lastSearch.monthFormat}}</td>
                                            <td>{{lastSearch.dayFormat}}</td>
                                            <td>{{lastSearch.highTemp05}}</td>
                                            <td>{{lastSearch.lowTemp05}}</td>
                                            <td>{{lastSearch.hum05}}</td>
                                            <td>{{lastSearch.conds05}}</td>
                                        </tr>
                                        <tr>
                                            <td>2010</td>
                                            <td>{{lastSearch.monthFormat}}</td>
                                            <td>{{lastSearch.dayFormat}}</td>
                                            <td>{{lastSearch.highTemp10}}</td>
                                            <td>{{lastSearch.lowTemp10}}</td>
                                            <td>{{lastSearch.hum10}}</td>
                                            <td>{{lastSearch.conds10}}</td>
                                        </tr>
                                        <tr>
                                            <td>2015</td>
                                            <td>{{lastSearch.monthFormat}}</td>
                                            <td>{{lastSearch.dayFormat}}</td>
                                            <td>{{lastSearch.highTemp15}}</td>
                                            <td>{{lastSearch.lowTemp15}}</td>
                                            <td>{{lastSearch.hum15}}</td>
                                            <td>{{lastSearch.conds15}}</td>
                                        </tr>
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- SECOND ROW -->
    <!-- ====================== -->
    <div class="row" id="adBox">

        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    Airbnb<br>
                    <a href="https://www.airbnb.com/" target="_blank"><img src="/images/airbnb.png" width="auto" height="120"></a>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    Hostelworld<br>
                    <a href="https://www.hostelworld.com/" target="_blank"><img src="/images/hostelworld.png" width="auto" height="120"></a>
                </div>
            </div>
        </div>


        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    SkyScanner<br>
                    <a href="https://www.skyscanner.com/" target="_blank"><img src="/images/skyscanner.png" width="auto" height="120"></a>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    Currency Converter<br>
                    <a href="http://www.xe.com/currencyconverter/" target="_blank"><img src="/images/xe.png" width="auto" height="120"></a>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    TripAdvisor<br>
                    <a href="https://www.tripadvisor.com/" target="_blank"><img src="/images/tripadvisor.jpg" width="auto" height="120"></a>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    USA National Parks<br>
                    <a href="https://www.nps.gov/findapark/index.htm" target="_blank"><img src="/images/nps.png" width="auto" height="120"></a>
                </div>
            </div>
        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).on("submit", "#tripForm", function(event) {
        event.preventDefault();

        var loc = {
            city: $(".city").val().trim(),
            state: $(".state").val().trim(),
            date: $(".date").val().trim()
        };

        $.ajax({
            type: "POST",
            url: "/api/newSearch",
            data: loc
        }).done(function(data) {
            location.reload();
        });
    });

    $(document).on("click", ".searchButton", function() {
        var id = $(this).data("searchid");
        console.log("we are clicking");
        $.ajax({
            type: "GET",
            url: "/results/priorsearch/" + id,
        }).done(function() {
            location.reload();
        });
    });

    $(document).on("click", ".deleteButton", function() {
        var id = $(this).data("deleteid");

        $.ajax({
            type: "DELETE",
            url: "/results/delete/" + id
        }).done(function() {
            location.reload();
        });
    });
</script>

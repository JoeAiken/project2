<script type="text/javascript">
    function titleCase(str) {
        str = str.toLowerCase().split(' ');

        for (var i = 0; i < str.length; i++) {
            str[i] = str[i].split('');
            str[i][0] = str[i][0].toUpperCase();
            str[i] = str[i].join('');
        }
        return str.join(' ');
    }

    $(document).on("submit", "#tripForm", function(event) {
        event.preventDefault();

        var location = {
            city: $("[name=city]").val().trim(),
            // state: $("[name=state]").val().trim(),
            // date: $("[name=date]").val().trim()
        };
        $.ajax({
            type: "POST",
            url: "/results",
            data: location
        }).done(function(data) {
            $(".destination").text(titleCase(location.city));
            $(".history").append(titleCase(location.city) + "<br>");
            $(".image").html('<img src="https://via.placeholder.com/250x250">');

            $("form").trigger("reset");
        });
    });

    $(document).on("click", ".deleteButton", function() {
        var id = $(this).data("deleteid");

        $.ajax({
            type: "DELETE",
            url: "/results/" + id
        }).done(function() {
            console.log("delete button submitted");
            location.reload();
        });
    });
</script>

<!-- NAVIGATION BAR -->
<!-- ====================== -->

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <form class="navbar-form navbar-left" id="tripForm">
                <span class="glyphicon glyphicon-search"></span>
                <input type="text" class="form-control city" placeholder="City..." id="field" name="city">
                <span class="glyphicon glyphicon-search"></span>
                <input type="text" class="form-control state" placeholder="State..." id="field" name="state">
                <span class="glyphicon glyphicon-calendar"></span>
                <input type="text" class="form-control date" placeholder="Date..." id="field" name="date">
                <button type="submit" class="btn btn-default submitButton">Submit</button>
            </form>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout">Log Out</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- FIRST ROW -->
<!-- ====================== -->
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Search History</h3>
                </div>
                <div class="panel-body history">

                    {{#each searchHistory}}

                        <p>{{this.city}}
                            <button data-deleteid="{{this.id}}" class="btn btn-sm deleteButton">XXX</button>
                        </p>


                    {{/each}}


                </div>
            </div>
        </div>

        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-body">


                    <div class="col-md-4" id="left">
                        <div class="row">
                            <p class="destination">{{lastSearch.city}}, {{lastSearch.state}}
                            </p>
                        </div>
                        <div class="row">
                            <p class="image">Image {{lastSearch.image}}
                            </p>
                        </div>
                    </div>


                    <div class="col-md-8" id="right">
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    Current Weather
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-body">

                                    <p class="weatherHistory"> Weather History <br>{{lastSearch.precipitation}} {{lastSearch.temperature}} {{lastSearch.humidity}}
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- SECOND ROW -->
    <!-- ====================== -->
    <div class="row">

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    AirBnB
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    TripAdvisor
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    Expedia
                </div>
            </div>
        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).on("submit", "#tripForm", function(event) {
        event.preventDefault();

        var loc = {
            city: $(".city").val().trim(),
            state: $(".state").val().trim(),
            date: $(".date").val().trim()
        };

        $.ajax({
            type: "POST",
            url: "/api/newSearch",
            data: loc
        }).done(function(data) {
            location.reload();
        });
    });


    $(document).on("click", ".deleteButton", function() {
        var id = $(this).data("deleteid");

        $.ajax({
            type: "DELETE",
            url: "/results/delete/" + id
        }).done(function() {
            location.reload();
        });
    });
</script>

<div class="container">


    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <h1 class="title">Create Account</h1>
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">


                    <form id="signup" name="signup" method="post" action="signup">

                        <label for="email">Email Address:</label>
                        <input class="form-control" aria-describedby="basic-addon1" name="email" type="email">

                        <br>

                        <label for="firstname">First Name:</label>
                        <input name="firstname" type="text" class="form-control" aria-describedby="basic-addon1">

                        <br>

                        <label for="lastname">Last Name:</label>
                        <input name="lastname" type="text" class="form-control" aria-describedby="basic-addon1">


                        <br>

                        <label for="password">Password:</label>
                        <input name="password" type="password" class="form-control" aria-describedby="basic-addon1">
                        <br>


                        <input class="btn btn-default" type="submit" value="Sign Up" id="logIn" name='btn_login'>
                        <br>

                    </form>

                    <a href="/signin">Sign in</a>


                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>





</div>

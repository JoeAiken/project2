<div class="container">

    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <h1 class="title">Sign Up</h1>
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">

                    <form action="/" method="POST">
                        <label>First and Last Name:</label><br>
                        <input type="text" id="name" class="form-control" aria-describedby="basic-addon1">
                        <br>
                        <label>Username:</label><br>
                        <input type="text" id="username" class="form-control" aria-describedby="basic-addon1">
                        <br>
                        <label>Password:</label><br>
                        <input type="text" id="password" class="form-control" aria-describedby="basic-addon1">
                        <br>
                        <button class="btn btn-default" type="submit" id="logIn">Log In</button>
                        <button class="btn btn-default" type="submit" id="signUp">Sign Up</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>


</div>

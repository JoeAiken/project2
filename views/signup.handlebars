<div class="container">


    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <h1 class="title">Create Account</h1>
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">


                    <form id="signup" name="signup" method="post" action="signup">

                        <label for="email">Email Address:</label>
                        <input class="form-control" aria-describedby="basic-addon1" name="email" id="email" type="email">

                        <br>

                        <label for="firstname">First Name:</label>
                        <input name="firstname" type="text" class="form-control" id="firstname" aria-describedby="basic-addon1">

                        <br>

                        <label for="lastname">Last Name:</label>
                        <input name="lastname" type="text" class="form-control" id="lastname" aria-describedby="basic-addon1">


                        <br>

                        <label for="password">Password:</label>
                        <input name="password" type="password" class="form-control" id="password" aria-describedby="basic-addon1">
                        <br>


                        <input class="btn btn-default" type="submit" value="Sign Up" id="logIn" name='btn_login'>
                        <br>

                    </form>

                    <a href="/signin">Sign in</a>


                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>





</div>

<script type="text/javascript">
    $(document).ready(function() {


        $("#logIn").on("click", function(event) {
            event.preventDefault();

            var userData = {

                email: $("#email").val().trim(),
                password: $("#password").val().trim(),
                firstname: $("#firstname").val().trim(),
                lastname: $("#lastname").val().trim()

            }

            //Just testing to make sure proper input is grabbed. Must now set up conditionals for each when input field is left blank.
            // ex) If (userData.email == "").....
            console.log("XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" + userData.email + userData.password + userData.firstname)

        })

    });
</script>

<div class="container">

    <div class="row" id="loginImages">
        <img src="/images/sanfran.jpg" width="280" height="180">
        <img src="/images/bangkok.jpg" width="280" height="180">
        <img src="/images/nyc.jpg" width="280" height="180">
        <img src="/images/london.jpg" width="280" height="180">
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row" id="title">
            <span class="glyphicon glyphicon-flash"></span>&nbsp;&nbsp;Create Account
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">


                    <form id="signup" name="signup" method="post" action="signup">

                        <label for="email">Email Address:</label>
                        <input class="form-control" aria-describedby="basic-addon1" name="email" type="email" data-error="Please enter a valid id" required>

                        <br>

                        <label for="firstname">First Name:</label>
                        <input name="firstname" type="text" class="form-control" aria-describedby="basic-addon1" required>

                        <br>

                        <label for="lastname">Last Name:</label>
                        <input name="lastname" type="text" class="form-control" aria-describedby="basic-addon1" required>


                        <br>

                        <label for="password">Password:</label>
                        <input name="password" type="password" class="form-control" aria-describedby="basic-addon1" id="password1" required>
                        <br>


                        <input class="btn btn-default" type="submit" value="Sign Up" id="logIn" name='btn_login'>
                        <br>

                    </form>

                    <a href="/signin">Sign in</a>


                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>





</div>

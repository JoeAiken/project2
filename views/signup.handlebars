<div class="container">


    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <h1 class="title">Create Account</h1>
        </div>

        <div class="row">
            <div class="panel panel-default" id="loginBox">
                <div class="panel-body">


                    <form id="signup" name="signup" method="post" action="signup" ata-toggle="validator" role="form">
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input class="form-control" aria-describedby="basic-addon1" id="email" name="email" type="email" data-error="Please enter a valid email" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="firstname">First Name:</label>
                            <input name="firstname" type="text" id="firstname" class="form-control" aria-describedby="basic-addon1" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="lastname">Last Name:</label>
                            <input name="lastname" type="text" id="lastname" class="form-control" aria-describedby="basic-addon1" required>
                        </div>

                        <br>

                        <label for="password">Password:</label>
                        <input name="password" type="password" id="password" class="form-control" pattern=".{6,}" title="Password needs to be a minimum of 6 characters" aria-describedby="basic-addon1" id="password1" required>
                        <br>


                        <input class="btn btn-default" type="submit" value="Sign Up" id="logIn" name='btn_login'>
                        <br>

                    </form>

                    <a href="/signin">Sign in</a>


                </div>

            </div>
        </div>
    </div>

    <div class="col-md-2"></div>

    <script>
        $(document).ready(function() {
            $('form').validate();
        });
    </script>

</div>
